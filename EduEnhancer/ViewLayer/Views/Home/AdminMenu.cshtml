@model DomainModel.User

@{
    ViewData["Title"] = "Správce";
}

<div class="text-center">
    <h1>Správce</h1>
    <br>
    <a asp-action="TestTemplateList">Správa zadání testů</a>
    <br>
    <a asp-action="ManageSolvedTestList" id="manage-solved-tests">Správa vyřešených testů</a>
    <br>
    <a asp-action="ManageSubjects">Správa předmětů</a>
    <br>
    <a asp-action="ManageUserListForAdmin">Správa uživatelů</a>
    <br>
    <a asp-action="ManageUserRegistrationListForAdmin">Správa registrací</a>

    <div id="user-information">
        <table>
            <tr>
                <th>Jméno</th>
                <td>@Model.FullName()</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>@Model.Login</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
        </table>
    </div>
</div>

<div id="backBtn"><a asp-action="Index">Zpět</a></div>

<div id="signOutBtn"><a asp-controller="Account" asp-action="GoogleSignOut">Odhlásit se</a></div>
