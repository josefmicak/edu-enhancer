@model IEnumerable<DomainModel.TestTemplate>

@{
    ViewData["Title"] = "Správa zadání testů";
}

<div class="text-center">
    <h1>Správa zadání testů</h1>

    <div id="test-template-list">
        <table>
            <tr>
                <th>Jmenný identifikátor testu</th>
                <th>Číselný identifikátor testu</th>
                <th>Nadpis</th>
                <th>Správa</th>
            </tr>
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TestNameIdentifier)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestNumberIdentifier)</td>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td><a class="button" id="testTemplateBtn_@i" title="Správa testu"
                            asp-area="" 
                            asp-controller="Home" 
                            asp-action="TestTemplate" 
                            asp-route-testNumberIdentifier="@item.TestNumberIdentifier">Správa testu</a></td>
                    </tr>
                }
            }
        </table>
    </div>

    <p>@ViewBag.Message</p>

    <form method="POST">
        <input type="submit" value="Načíst testy" class="btn btn-primary" />
        <input type="hidden" value="add" name="action">
    </form>

    <form method="POST">
        <input type="submit" value="Smazat testy" class="btn btn-primary" />
        <input type="hidden" value="delete" name="action">
    </form>
</div>

<footer>
    <div class="container">
        <a asp-action="TeacherMenu">Zpět</a>
    </div>
</footer>