@model DomainModel.QuestionTemplate

@{
    string testNumberIdentifier = ViewBag.TestNumberIdentifier;

    ViewData["Title"] = "Vytvoření zadání otázky";
}

<div class="text-center">
    <h1>Vytvoření zadání otázky</h1>

    <form method="POST">
        <label for="title">Nadpis:</label>
        <input type="text" required id="title" name="Title"><br>
        <input class="button" title="Uložit" type="submit" value="Uložit">
        <input type="hidden" value="@testNumberIdentifier" name="testNumberIdentifier">
    </form>
</div>

<div id="backBtn"><a asp-action="TestTemplate"
       asp-route-testNumberIdentifier="@testNumberIdentifier">Zpět</a>
</div>

<div id="signOutBtn"><a asp-controller="Account" asp-action="GoogleSignOut">Odhlásit se</a></div>